@model IEnumerable<TripUp.Models.ItineraryListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItineraryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItineraryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PitStop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelDistance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItineraryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItineraryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PitStop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelDistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ItineraryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ItineraryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ItineraryId })
            </td>
        </tr>
    }

</table>
